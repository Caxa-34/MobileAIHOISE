    <style name="cornerAvatar">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="cornerImageDiscussion">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item>
    </style>
    <style name="customDatePickerDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <!-- Цвет основного фона диалога -->
        <item name="colorBackgroundFloating">@color/white</item>
        <!-- Цвет выделенного текста (например, выбранная дата) -->
        <item name="colorAccent">@color/main_color</item>
        <!-- Цвет текста в заголовке и кнопках -->
        <item name="android:textColorPrimary">@color/gray_primary_color</item>
        <!-- Цвет текста для вторичных элементов -->
        <item name="android:textColorSecondary">@color/gray_secondary_color</item>
    </style>
    <style name="PopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/background_layout</item>
        <item name="android:overlapAnchor">true</item> <!-- Для корректного отображения разделителя -->
    </style>
</resources>