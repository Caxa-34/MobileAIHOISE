<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="accentButton" parent="android:Widget.Button">
        <item name="android:layout_width">278dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/button_background_selector</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@drawable/button_txtcolor_selector</item>
    </style>
    <style name="simpleButton" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@drawable/background_simple_button</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/additional_color</item>
    </style>
    <style name="simpleButtonBorder" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@drawable/background_simple_border_button</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_color</item>
    </style>
    <style name="simpleButtonWithoutBorder" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/error_color</item>
    </style>
    <style name="enterText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/background_enter_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_primary_color</item>
    </style>
    <style name="headerText" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/accent_color</item>
        <item name="android:textSize">32sp</item>
    </style>
    <style name="linkButton" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/accent_color</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="BottomNavigationText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/gray_secondary_color</item>
    </style>
    <style name="BottomNavigationText.Selected">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
    </style>

