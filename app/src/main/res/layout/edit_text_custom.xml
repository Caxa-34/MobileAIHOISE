<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:nextFocusDown="@id/etText_etcustom"
    android:orientation="vertical">

    <TextView
        android:id="@+id/etError_etcustom"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/roboto"
        android:text="Error"
        android:textColor="@color/error_color"
        android:textSize="12sp"
        android:visibility="invisible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/etBackground_etcustom"
        style="@style/enterText"
        android:layout_width="match_parent"
        android:paddingVertical="8dp"
        android:paddingLeft="24dp">

        <CheckBox
            android:id="@+id/chbShowPass_etcustom"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:button="@drawable/show_pass_checkbox"
            android:buttonTint="@color/gray_primary_color"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/etTitle_etcustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Title"
            android:textColor="@color/gray_primary_color"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etText_etcustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roboto"
            android:hint="Text"
            android:textColor="@color/gray_primary_color"
            android:textColorHint="@color/gray_secondary_color"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
