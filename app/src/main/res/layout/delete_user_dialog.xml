<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_layout"
    android:orientation="vertical"
    android:paddingHorizontal="16dp">

    <TextView
        style="@style/headerText"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Вы точно хотите\nудалить аккаунт?"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/roboto"
        android:text="Почему вы решили удалить аккаунт?"
        android:textColor="@color/gray_primary_color"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/etReason_delacc"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/background_enter_small_text"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:gravity="start|top"
        android:hint="(необязательное поле)"
        android:inputType="textMultiLine"
        android:padding="4dp"
        android:textColor="@color/gray_primary_color"
        android:textColorHint="@color/gray_secondary_color"
        android:textSize="16sp" />

    <include
        android:id="@+id/etConfitmPass_delacc"
        layout="@layout/edit_text_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel_delacc"
            style="@style/simpleButtonBorder"
            android:layout_width="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:text="Отмена" />

        <Button
            android:id="@+id/btnDelete_delacc"
            style="@style/simpleButtonWithoutBorder"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:text="Удалить" />
    </LinearLayout>

</LinearLayout>