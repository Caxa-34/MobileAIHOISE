<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_layout"
    android:orientation="vertical"
    android:paddingHorizontal="16dp">

    <TextView
        style="@style/headerText"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Смена аватара"
        android:textSize="24sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginVertical="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgAvatar_changeavatar"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ava3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/cornerAvatar"
            app:shapeAppearanceOverlay="@style/cornerAvatar" />

        <TextView
            android:id="@+id/btnUploadImage_changeImage"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="@string/add_user_ava"
            android:textAlignment="center"
            android:textColor="@color/accent_color"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgAvatar_changeavatar"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:fontFamily="@font/roboto"
            android:text="Системные"
            android:textColor="@color/gray_primary_color"
            android:textSize="14sp" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scrollbarThumbHorizontal="@drawable/custom_scrollbar_horiz">

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:orientation="vertical"
                app:rowCount="2">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ava2"
                    app:shapeAppearanceOverlay="@style/cornerAvatar" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ava2"
                    app:shapeAppearanceOverlay="@style/cornerAvatar" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ava2"
                    app:shapeAppearanceOverlay="@style/cornerAvatar" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ava2"
                    app:shapeAppearanceOverlay="@style/cornerAvatar" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ava2"
                    app:shapeAppearanceOverlay="@style/cornerAvatar" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ava2"
                    app:shapeAppearanceOverlay="@style/cornerAvatar" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ava2"
                    app:shapeAppearanceOverlay="@style/cornerAvatar" />

            </androidx.gridlayout.widget.GridLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:fontFamily="@font/roboto"
            android:text="Мои аватарки"
            android:textColor="@color/gray_primary_color"
            android:textSize="14sp" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scrollbarThumbHorizontal="@drawable/custom_scrollbar_horiz">

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:orientation="vertical"
                app:rowCount="1">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ava1"
                    app:shapeAppearanceOverlay="@style/cornerAvatar" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ava1"
                    app:shapeAppearanceOverlay="@style/cornerAvatar" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ava1"
                    app:shapeAppearanceOverlay="@style/cornerAvatar" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ava1"
                    app:shapeAppearanceOverlay="@style/cornerAvatar" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ava1"
                    app:shapeAppearanceOverlay="@style/cornerAvatar" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ava1"
                    app:shapeAppearanceOverlay="@style/cornerAvatar" />

            </androidx.gridlayout.widget.GridLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel_changeavatar"
            style="@style/simpleButtonBorder"
            android:layout_width="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:text="Отмена" />

        <Button
            android:id="@+id/btnApply_changeavatar"
            style="@style/simpleButton"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:text="Применить" />
    </LinearLayout>

</LinearLayout>